<p style="color: green"><%= notice %></p>
<div class="pagetitle">
  <h1>Empresas</h1>
</div><!-- End Page Title -->
<hr>
<section class="section">
  <div class="row align-items-top">
    <div class="col-lg-12">

      <!-- Default Card -->
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-8">
              <h5 class="card-title">Listado de Empresas</h5>
            </div>
            <div class="col-lg-4 float-right">
              <%= link_to "<i class='bi bi-bookmark-plus-fill'></i>Nuevo registro".html_safe, root_path, class: "text-success", data: { turbolinks: false }  %>
            </div>
          </div>
          <table class="table datatable" id="empresa_table" data-controller="datatable" data-turbolinks="false" class="paginacion">
            <thead>
              <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Pais</th>
                <th scope="col">Sucursales</th>
              </tr>
            </thead>
            <tbody>
              <% @empresas.each do |empresa| %>
                <tr>
                  <td><%= empresa.nombre %></td>
                  <td><%= empresa.pais %></td>
                  
                  <td>
                    <a href="/sucursales/<%= empresa.id %>" class="btn btn-primary btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Mostrar">
                        <i class="bi bi-eye-fill text-white"></i> Ver
                    </a>
                  </td>

                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div><!-- End Default Card -->
    </div>
  </div>
</section>