<div class="pagetitle">
  <h1>Modificaci√≥n de sucursal</h1>
</div><!-- End Page Title -->
<hr>
<section class="section">
  <div class="row align-items-top">
    <div class="col-lg-12">

      <!-- Default Card -->
      <div class="card">
        <div class="card-body" >
          <h5 class="card-title">
            Modificar <span>| <%= @sucursal.nombre%></span>
          </h5>
          <hr>
          <div class="container">
            <%= simple_form_for([@sucursal.empresa, @sucursal]) do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

              <div class="form-inputs">
                <div class="row">
                  <div class="col-lg-4">
                    <%= f.input :nombre %>
                  </div>
                  <div class="col-lg-4">
                   <%= f.input :direccion %>
                  </div>
                  <div class="col-lg-4">
                   <%= f.input :telefono %>
                  </div>
                </div>
              </div>

              <div class="form-actions">
                <div class="d-grid gap-2 mt-3">
                  <%= f.button :submit, "Guardar", class: "btn btn-success" %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
</section>