<p style="color: green"><%= notice %></p>
<div class="pagetitle">
  <h1>Colaboradores</h1>
</div><!-- End Page Title -->
<hr>
<section class="section">
  <div class="row align-items-top">
    <div class="col-lg-12">

      <!-- Default Card -->
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-8">
              <h5 class="card-title">Listado de Colaboradores</h5>
            </div>
            <div class="col-lg-4 float-right">
              <%= link_to "<i class='bi bi-bookmark-plus-fill'></i> Nuevo registro".html_safe, new_empresa_sucursal_colaborador_path(@sucursal.empresa_id, @sucursal.id), class: "text-success", data: { turbolinks: false }  %>
            </div>
          </div>
          <table class="table datatable" id="empresa_table" data-controller="datatable" data-turbolinks="false" class="paginacion">
            <thead>
              <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Cui</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% @colaboradores.each do |colaborador| %>
                <tr>
                  <td><%= colaborador.nombre %></td>
                  <td><%= colaborador.cui %></td>
                  <td>
                    <a href="/empresas/<%= colaborador.sucursal.empresa_id %>/sucursales/<%= colaborador.sucursal_id %>/colaboradores/<%= colaborador.id %>/edit" class="btn btn-warning btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="Editar">
                      <i class="bi bi-pencil-fill"></i>
                    </a>

                    <a href="/empresas/<%= colaborador.sucursal.empresa_id %>/sucursales/<%= colaborador.sucursal_id %>/colaboradores/<%= colaborador.id %>" class="btn btn-danger btn-circle btn-sm" data-method="delete" data-confirm="¿Estás seguro?" data-toggle="tooltip" data-placement="top" title="Eliminar">
                      <i class="bi bi-trash-fill"></i>
                    </a>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <!-- Mover el botón fuera de la tabla -->
          <div class="mt-3">
            <%= link_to "/empresas/#{@sucursal.empresa_id}/sucursales", class: "btn btn-info", data: { toggle: "tooltip", placement: "top" }, title: "Regresar" do %>
              <i class="bi bi-skip-backward"></i> Regresar a Sucursales
            <% end %>
          </div>
        </div>
      </div><!-- End Default Card -->
    </div>
  </div>
</section>